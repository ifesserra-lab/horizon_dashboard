---
import type { ResearcherAdvisorship } from "../../types/researchers";

interface Props {
    advisorships: ResearcherAdvisorship[];
}

const { advisorships } = Astro.props;
---

<section aria-labelledby="advisorships-title" class="space-y-8 pb-10">
    <h3
        id="advisorships-title"
        class="text-2xl font-bold font-['Outfit'] text-text-main py-4 border-b border-border-main"
    >
        Orientações
    </h3>

    {
        advisorships.length > 0 ? (
            <div class="space-y-10">
                <div class="space-y-4">
                    <h4 class="text-sm font-bold text-text-secondary uppercase tracking-widest flex items-center gap-2">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="w-4 h-4"
                            viewBox="0 0 24 24"
                            fill="none"
                            stroke="currentColor"
                            stroke-width="2"
                            stroke-linecap="round"
                            stroke-linejoin="round"
                        >
                            <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                            <circle cx="9" cy="7" r="4" />
                            <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                        </svg>
                        Como Orientador
                    </h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {advisorships.map((adv) => (
                            <div class="glass-card p-5 border-l-4 border-l-premium-accent group hover:bg-premium-accent/[0.02] transition-all">
                                <div class="flex justify-between items-start mb-3">
                                    <span class="text-[10px] font-bold text-premium-accent uppercase tracking-wider bg-premium-accent/10 px-2 py-0.5 rounded">
                                        {adv.type || "Orientação"}
                                    </span>
                                    <span class="text-[10px] font-medium text-text-secondary">
                                        {adv.start_year || "N/A"} -{" "}
                                        {adv.end_year === "None"
                                            ? "Atual"
                                            : adv.end_year}
                                    </span>
                                </div>
                                <h5 class="font-bold text-text-main mb-2 leading-snug truncate-2-lines group-hover:text-premium-accent transition-colors">
                                    {adv.name}
                                </h5>
                                <div class="flex flex-col gap-1">
                                    <p class="text-xs text-text-secondary">
                                        <span class="font-bold text-text-main">
                                            Estudante:
                                        </span>{" "}
                                        {adv.student_name}
                                    </p>
                                    <div class="flex items-center gap-2 mt-1">
                                        <span
                                            class={`text-[10px] px-1.5 py-0.5 rounded font-bold uppercase ${adv.status === "Concluded" ? "bg-emerald-500/10 text-emerald-600" : "bg-blue-500/10 text-blue-600"}`}
                                        >
                                            {adv.status === "Concluded"
                                                ? "Concluído"
                                                : "Em Andamento"}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        ))}
                    </div>
                </div>
            </div>
        ) : (
            <p class="text-text-secondary italic">
                Nenhuma orientação registrada.
            </p>
        )
    }
</section>
