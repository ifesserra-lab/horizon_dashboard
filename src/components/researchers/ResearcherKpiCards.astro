---
import type { Researcher } from "../../types/researchers";

interface Props {
    researchers: Researcher[];
}

const { researchers } = Astro.props;

// --- KPI Calculations ---
const totalResearchers = researchers.length;

// Initiatives (Projects)
let totalProjects = 0;
let activeProjects = 0;
const uniqueProjectIds = new Set<number>();

researchers.forEach((r) => {
    r.initiatives.forEach((i) => {
        if (!uniqueProjectIds.has(i.id)) {
            uniqueProjectIds.add(i.id);
            totalProjects++;
            if (["active", "ativo", "Active"].includes(i.status)) {
                activeProjects++;
            }
        }
    });
});

// Groups
const uniqueGroups = new Set<number>();
researchers.forEach((r) => {
    r.research_groups.forEach((g) => uniqueGroups.add(g.id));
});
const totalGroups = uniqueGroups.size;

// Knowledge Areas
const uniqueAreas = new Set<string>();
researchers.forEach((r) => {
    r.knowledge_areas.forEach((a) => {
        uniqueAreas.add(a.name);
    });
});
const totalAreas = uniqueAreas.size;
---

