---
interface Props {
    totalArticles: number;
    totalProjects: number;
    totalAdvisorships: number;
}

const { totalArticles, totalProjects, totalAdvisorships } = Astro.props;

const kpiItems = [
    {
        label: "Artigos Publicados",
        value: totalArticles,
        icon: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z",
        color: "text-blue-500",
        bg: "bg-blue-500/10",
        border: "border-blue-500/20",
    },
    {
        label: "Projetos e Iniciativas",
        value: totalProjects,
        icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.384-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z",
        color: "text-emerald-500",
        bg: "bg-emerald-500/10",
        border: "border-emerald-500/20",
    },
    {
        label: "Orientações",
        value: totalAdvisorships,
        icon: "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z",
        color: "text-purple-500",
        bg: "bg-purple-500/10",
        border: "border-purple-500/20",
    },
];
---

<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
    {
        kpiItems.map((item) => (
            <div class="glass-card p-4 rounded-2xl border border-border-main flex items-center justify-between group hover:border-premium-accent/30 transition-colors">
                <div>
                    <p class="text-text-secondary text-xs uppercase tracking-wider font-bold mb-1">
                        {item.label}
                    </p>
                    <div class="text-3xl font-extrabold text-text-main flex items-baseline gap-1">
                        {item.value}
                        {item.value > 0 && (
                            <span class="text-[10px] text-green-400 font-normal opacity-0 group-hover:opacity-100 transition-opacity">
                                Total
                            </span>
                        )}
                    </div>
                </div>
                <div class={`p-3 rounded-xl ${item.bg} ${item.border} border`}>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        class={`w-6 h-6 ${item.color}`}
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="1.5"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d={item.icon}
                        />
                    </svg>
                </div>
            </div>
        ))
    }
</div>
