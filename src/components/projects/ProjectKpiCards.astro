---
import KpiCard from '../KpiCard.astro';

interface Props {
	martData: any;
}

const { martData } = Astro.props;

const totalProjects = martData.summary.total_projects;
const activeProjects = martData.summary.active_projects;
const totalParticipants = martData.summary.total_participants;
const totalResearchers = martData.team_composition.researchers;
const totalStudents = martData.team_composition.students;

// Icons
const projectIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/></svg>`;
const activeIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>`;
const researcherIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><polyline points="16 11 18 13 22 9"/></svg>`;
const studentIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 10v6M2 10l10-5 10 5-10 5z"/><path d="M6 12v5c3 3 9 3 12 0v-5"/></svg>`;
const peopleIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><circle cx="19" cy="11" r="3"/></svg>`;
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-6">
	<KpiCard 
		title="Total de Projetos" 
		value={totalProjects} 
		icon={projectIcon}
		color="premium-accent"
	/>
	<KpiCard 
		title="Projetos Ativos" 
		value={activeProjects} 
		icon={activeIcon}
		color="emerald-500"
	/>
    <KpiCard 
		title="Pesquisadores" 
		value={totalResearchers} 
		icon={researcherIcon}
		color="amber-500"
	/>
	<KpiCard 
		title="Alunos (Bolsistas/VoluntÃ¡rios)" 
		value={totalStudents} 
		icon={studentIcon}
		color="sky-500"
	/>
    <KpiCard 
		title="Total de Participantes" 
		value={totalParticipants} 
		icon={peopleIcon}
		color="premium-purple"
	/>
</div>
