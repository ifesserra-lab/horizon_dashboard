---
import Layout from "../../layouts/Layout.astro";
import researchersData from "../../data/canonical/researchers_canonical.json";
import advisorshipsData from "../../data/canonical/advisorships_canonical.json";
import type { Researcher } from "../../types/researchers";
import type { ProjectAdvisorship } from "../../types/advisorships";
import ResearcherCharts from "../../components/researchers/ResearcherCharts.astro";
import ResearcherKpiCards from "../../components/researchers/ResearcherKpiCards.astro";

const researchers = (researchersData as Researcher[]).sort((a, b) =>
    a.name.localeCompare(b.name),
);

// Calculate counts for each researcher
const allProjects = advisorshipsData as unknown as ProjectAdvisorship[];
const researcherStats = researchers.reduce(
    (acc, researcher) => {
        const initiativesCount = researcher.initiatives.length;
        const advisorships = allProjects
            .flatMap((p) => p.advisorships)
            .filter(
                (a) =>
                    a.supervisor_id === researcher.id ||
                    a.student_id === researcher.id,
            );

        acc[researcher.id] = {
            projects: initiativesCount,
            advisorships: advisorships.length,
            isSupervisor: advisorships.some(
                (a) => a.supervisor_id === researcher.id,
            ),
            isStudent: advisorships.some((a) => a.student_id === researcher.id),
        };
        return acc;
    },
    {} as Record<
        number,
        {
            projects: number;
            advisorships: number;
            isSupervisor: boolean;
            isStudent: boolean;
        }
    >,
);
---

<Layout title="Pesquisadores">
    <div class="space-y-10 pb-12">
        <!-- Header -->
        <header class="flex flex-col gap-6">
            <div>
                <h1
                    class="text-4xl font-extrabold font-['Outfit'] tracking-tight text-text-main"
                >
                    Nossos <span
                        class="text-transparent bg-clip-text bg-gradient-to-r from-premium-accent to-premium-purple"
                        >Pesquisadores</span
                    >
                </h1>
                <p class="text-text-secondary mt-2 max-w-2xl">
                    Conheça os profissionais que impulsionam a ciência e
                    inovação.
                </p>
            </div>
        </header>

        <!-- KPI Cards -->
        <ResearcherKpiCards researchers={researchers} />

        <!-- Analytics Charts -->
        <ResearcherCharts researchers={researchers} />

        <!-- Search -->
        <div class="relative max-w-md w-full">
            <label for="researcherSearch" class="sr-only"
                >Buscar pesquisadores</label
            >
            <input
                type="text"
                id="researcherSearch"
                placeholder="Buscar por nome..."
                class="w-full bg-glass-bg border border-border-main rounded-2xl px-12 py-4 text-sm focus:outline-none focus:ring-2 focus:ring-premium-accent/50 focus:border-premium-accent transition-all text-text-main shadow-lg shadow-premium-accent/5"
            />
            <svg
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                class="absolute left-4 top-1/2 -translate-y-1/2 w-6 h-6 text-text-secondary"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><circle cx="11" cy="11" r="8"></circle><path d="m21 21-4.3-4.3"
                ></path></svg
            >

            <button
                id="resetFilters"
                class="absolute right-4 top-1/2 -translate-y-1/2 text-text-secondary hover:text-premium-accent transition-colors hidden"
                title="Limpar busca"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-5 h-5"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><path d="m15 9-6 6"></path><path d="m9 9 6 6"
                    ></path><circle cx="12" cy="12" r="10"></circle></svg
                >
            </button>
        </div>

        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6"
            id="researchersGrid"
            role="region"
            aria-label="Lista de pesquisadores"
        >
            {
                researchers.map((researcher) => {
                    const firstName = researcher.name.split(" ")[0];
                    return (
                        <article
                            class="researcher-card glass-card p-6 hover:border-premium-accent/40 hover:bg-premium-accent/[0.02] transition-all flex flex-col items-center text-center group"
                            data-name={researcher.name.toLowerCase()}
                        >
                            <div class="w-24 h-24 rounded-full bg-gradient-to-br from-premium-accent/20 to-premium-purple/20 border-2 border-border-main flex items-center justify-center text-premium-accent font-bold text-2xl mb-4 group-hover:scale-110 transition-transform duration-300 shadow-lg shadow-premium-accent/5">
                                {researcher.name.charAt(0)}
                            </div>

                            <h3 class="text-lg font-bold text-text-main mb-1 leading-tight group-hover:text-premium-accent transition-colors">
                                {researcher.name}
                            </h3>

                            {researcher.identification_id && (
                                <p class="text-xs text-text-secondary mb-4 flex items-center justify-center gap-1.5 opacity-80">
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-3.5 h-3.5"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <rect
                                            width="20"
                                            height="16"
                                            x="2"
                                            y="4"
                                            rx="2"
                                        />
                                        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
                                    </svg>
                                    {researcher.identification_id.split("@")[0]}
                                    ...
                                </p>
                            )}

                            <div class="flex flex-wrap justify-center gap-2 mb-4 w-full">
                                {researcher.knowledge_areas
                                    .slice(0, 3)
                                    .map((area) => (
                                        <span class="px-2 py-0.5 rounded-md bg-[var(--tag-bg)] text-[10px] font-bold text-text-secondary border border-border-main truncate max-w-[120px]">
                                            {area.name}
                                        </span>
                                    ))}
                                {researcher.knowledge_areas.length > 3 && (
                                    <span class="px-2 py-0.5 rounded-md bg-[var(--tag-bg)] text-[10px] font-bold text-text-secondary">
                                        +{researcher.knowledge_areas.length - 3}
                                    </span>
                                )}
                            </div>

                            <div class="flex items-center gap-4 mb-6">
                                <div class="flex flex-col items-center">
                                    <span class="text-xs font-bold text-text-main">
                                        {
                                            researcherStats[researcher.id]
                                                .projects
                                        }
                                    </span>
                                    <span class="text-[8px] uppercase tracking-wider text-text-secondary font-bold">
                                        Projetos
                                    </span>
                                </div>
                                <div class="w-px h-6 bg-border-main" />
                                <div class="flex flex-col items-center">
                                    <span class="text-xs font-bold text-text-main">
                                        {
                                            researcherStats[researcher.id]
                                                .advisorships
                                        }
                                    </span>
                                    <span class="text-[8px] uppercase tracking-wider text-text-secondary font-bold">
                                        Orientações
                                    </span>
                                </div>
                                {(researcherStats[researcher.id].isSupervisor ||
                                    researcherStats[researcher.id]
                                        .isStudent) && (
                                    <>
                                        <div class="w-px h-6 bg-border-main" />
                                        <div class="flex gap-1">
                                            {researcherStats[researcher.id]
                                                .isSupervisor && (
                                                <div
                                                    title="Orientador"
                                                    class="w-4 h-4 rounded-full bg-premium-accent/10 flex items-center justify-center text-premium-accent"
                                                >
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="w-2.5 h-2.5"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="3"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    >
                                                        <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                                                        <circle
                                                            cx="9"
                                                            cy="7"
                                                            r="4"
                                                        />
                                                    </svg>
                                                </div>
                                            )}
                                            {researcherStats[researcher.id]
                                                .isStudent && (
                                                <div
                                                    title="Orientando"
                                                    class="w-4 h-4 rounded-full bg-premium-purple/10 flex items-center justify-center text-premium-purple"
                                                >
                                                    <svg
                                                        xmlns="http://www.w3.org/2000/svg"
                                                        class="w-2.5 h-2.5"
                                                        viewBox="0 0 24 24"
                                                        fill="none"
                                                        stroke="currentColor"
                                                        stroke-width="3"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    >
                                                        <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
                                                        <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
                                                    </svg>
                                                </div>
                                            )}
                                        </div>
                                    </>
                                )}
                            </div>

                            <div class="mt-auto pt-4 border-t border-border-main w-full flex justify-between items-center">
                                <div class="flex gap-2">
                                    {researcher.cnpq_url && (
                                        <a
                                            href={researcher.cnpq_url}
                                            target="_blank"
                                            class="text-text-secondary hover:text-premium-accent transition-colors p-1"
                                            title="Lattes"
                                        >
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                class="w-4 h-4"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                                stroke="currentColor"
                                                stroke-width="2"
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                            >
                                                <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
                                                <rect
                                                    width="4"
                                                    height="12"
                                                    x="2"
                                                    y="9"
                                                />
                                                <circle cx="4" cy="4" r="2" />
                                            </svg>
                                        </a>
                                    )}
                                </div>
                                <a
                                    href={`${import.meta.env.BASE_URL}researchers/${researcher.id}`}
                                    class="text-xs font-bold text-premium-accent flex items-center gap-1 hover:translate-x-1 transition-transform focus:ring-2 focus:ring-premium-accent rounded px-1 group-hover/btn:underline"
                                >
                                    Ver perfil
                                    <svg
                                        aria-hidden="true"
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="w-4 h-4"
                                        viewBox="0 0 24 24"
                                        fill="none"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <>
                                            <path d="M5 12h14" />
                                            <path d="m12 5 7 7-7 7" />
                                        </>
                                    </svg>
                                </a>
                            </div>
                        </article>
                    );
                })
            }
        </div>

        <!-- Empty State -->
        <div
            id="emptyState"
            class="hidden flex-col items-center justify-center py-24 text-center"
        >
            <div
                class="w-24 h-24 bg-slate-100 dark:bg-white/5 rounded-3xl flex items-center justify-center mb-6 text-text-secondary border border-border-main border-dashed"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-12 h-12 opacity-50"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    ><circle cx="11" cy="11" r="8"></circle><path
                        d="m21 21-4.3-4.3"></path><path d="M8 11h6"></path></svg
                >
            </div>
            <h3 class="text-2xl font-bold font-['Outfit'] text-text-main mb-2">
                Nenhum pesquisador encontrado
            </h3>
            <p class="text-text-secondary max-w-sm">
                Tente buscar por outro nome.
            </p>
        </div>
    </div>

    <script>
        const searchInput = document.getElementById(
            "researcherSearch",
        ) as HTMLInputElement;
        const resetBtn = document.getElementById("resetFilters");
        const emptyState = document.getElementById("emptyState");
        const cards = document.querySelectorAll(".researcher-card");

        function filterResearchers() {
            const query = searchInput.value.toLowerCase().trim();
            let visibleCount = 0;

            // Show/hide reset button
            if (query) {
                resetBtn?.classList.remove("hidden");
            } else {
                resetBtn?.classList.add("hidden");
            }

            cards.forEach((card) => {
                const element = card as HTMLElement;
                const name = element.dataset.name || "";

                const matches = !query || name.includes(query);

                if (matches) {
                    element.style.display = "flex";
                    visibleCount++;
                } else {
                    element.style.display = "none";
                }
            });

            // Toggle empty state
            if (visibleCount === 0) {
                emptyState?.classList.remove("hidden");
                emptyState?.classList.add("flex");
            } else {
                emptyState?.classList.add("hidden");
                emptyState?.classList.remove("flex");
            }
        }

        searchInput?.addEventListener("input", filterResearchers);

        resetBtn?.addEventListener("click", () => {
            searchInput.value = "";
            filterResearchers();
            searchInput.focus();
        });
    </script>
</Layout>
